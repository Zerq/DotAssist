{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2022",
    "module": "ES2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "wwwroot",
    "allowJs": true
  },
  
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
